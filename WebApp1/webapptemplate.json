{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "aspname1": {
            "defaultValue": "windows",
            "type": "String"
        },
        "aspprefix": {
            "defaultValue": "asp",
            "type": "String"
        },
        "webappprefix": {
            "defaultValue": "webapp",
            "type": "String"
        },
        "webappname1": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine."
            }
        },
        "skuName": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
              "F1",
              "D1",
              "B1",
              "B2",
              "B3",
              "S1",
              "S2",
              "S3",
              "P1",
              "P2",
              "P3",
              "P4"
            ],
            "metadata": {
              "description": "Describes plan's pricing tier and instance size. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
            }
          }
    },
    "variables": {
        "aspName"   : "[toLower( concat( parameters('aspprefix'),'-', uniqueString(resourceGroup().id),'-',parameters('aspname1') ) )]",
        "webAppName": "[toLower( concat( parameters('webappprefix'),'-', uniqueString(resourceGroup().id),'-',parameters('webappname1') ) )]",
        "webAppName1": "[toLower( concat( parameters('webappprefix'),'-', uniqueString(resourceGroup().id),'-',parameters('webappname1'),'-1' ) )]",
        "location"  : "[resourceGroup().location]"
      },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('aspName')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "Free",
                "size": "[parameters('skuName')]",
                "family": "F",
                "capacity": 1
            },
            "kind": "app",
            "properties": {
                "perSiteScaling": false,
                "maximumElasticWorkerCount": 1,
                "isSpot": false,
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "targetWorkerCount": 0,
                "targetWorkerSizeId": 0
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('webAppName')]",
            "location": "[variables('location')]",
            "kind": "app",
            "dependsOn": [
                "[variables('aspName')]"
              ],           
            "properties": {
                "enabled": true,                
                "serverFarmId": "[variables('aspName')]",
                "reserved": false,
                "isXenon": false,
                "hyperV": false,
                "siteConfig": {},
                "scmSiteAlsoStopped": false,
                "clientAffinityEnabled": true,
                "clientCertEnabled": false,
                "hostNamesDisabled": false,
                "containerSize": 0,
                "dailyMemoryTimeQuota": 0,
                "httpsOnly": true,
                "redundancyMode": "None"
            }
        }
    ]
}